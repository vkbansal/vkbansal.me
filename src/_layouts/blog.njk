---
layout: main
---
<div class="container blog-post">
 <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="/">üè†</a></li>
      <li><a href="/blog/">Blog</a></li>
      <li class="is-active"><a href="#" aria-current="page">{{ title }}</a></li>
    </ul>
  </nav>
  <section class="content">
    <h1>{{ title }}</h1>
    <div class="blog-post-info">
      <p>Published at {{ date | formatDate('MMMM do yyyy') }}</p>
      {# <p>Author: {% if author.website %} <a href="{{ author.website }}" target="_blank" rel="noopener noreferrer">{{ author.name }}</a> {% else %} {{ author.name }} {% endif %}</p> #}
    </div>
    {{ content | safe }}
  </section>
  <nav class="post-pagination" role="navigation" aria-label="pagination">
  {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.posts | getNextCollectionItem(page) %}
  {% if previousPost %}
    <a class="prev-post" href="{{ previousPost.url }}">
      <span class="hint">&larr; Previous Post</span>{{ previousPost.data.title }}
    </a>
  {% else %}
    <span></span>
  {% endif %}
  {% if nextPost %}
    <a class="next-post" href="{{ nextPost.url }}">
      <span class="hint">Next Post &rarr;</span>{{ nextPost.data.title }}
    </a>
  {% else %}
    <span></span>
  {% endif %}
  </nav>
</div>
