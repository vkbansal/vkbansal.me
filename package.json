{
	"name": "vkbansal.me",
	"version": "3.0.0",
	"description": "Site for Vivek Kumar Bansal",
	"type": "module",
	"private": true,
	"author": "Vivek Kumar Bansal <contact@vkbansal.me>",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint 'src/**/*.{ts,tsx,astro}'",
		"fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
		"fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'",
		"typecheck": "astro check && tsc --noEmit",
		"dev": "astro dev",
		"start": "astro dev",
		"prebuild": "rm -rf public",
		"build": "NODE_ENV=production astro build"
	},
	"dependencies": {
		"@types/node": "^18.15.10",
		"astro": "^2.1.7",
		"change-case": "^4.1.2",
		"dayjs": "^1.11.7",
		"html-entities": "^2.3.3",
		"normalize.css": "^8.0.1",
		"reading-time": "^1.5.0",
		"sass": "^1.60.0",
		"typescript": "^5.0.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-astro": "^0.26.1",
		"husky": "^8.0.3",
		"prettier": "^2.8.7",
		"prettier-plugin-astro": "^0.8.0",
		"rehype-attr": "^2.1.4",
		"rehype-external-links": "^2.0.1"
	}
}
