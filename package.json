{
	"name": "vkbansal.me",
	"version": "3.0.0",
	"description": "Site for Vivek Kumar Bansal",
	"type": "module",
	"private": true,
	"author": "Vivek Kumar Bansal <contact@vkbansal.me>",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint 'src/**/*.{ts,tsx,astro}'",
		"fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
		"fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'",
		"typecheck": "astro check && tsc --noEmit",
		"dev": "astro dev",
		"start": "astro dev",
		"prebuild": "rm -rf public",
		"build": "NODE_ENV=production astro build"
	},
	"dependencies": {
		"@netlify/functions": "^1.2.0",
		"@types/node": "^18.7.14",
		"astro": "1.1.1",
		"change-case": "^4.1.2",
		"date-fns": "^2.29.2",
		"github-slugger": "^1.4.0",
		"html-entities": "^2.3.3",
		"mongodb": "^4.9.0",
		"normalize.css": "^8.0.1",
		"reading-time": "^1.5.0",
		"recast": "^0.21.2",
		"rollup": "^2.78.1",
		"sass": "^1.54.6",
		"typescript": "^4.8.2",
		"vite": "^3.0.9"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.36.0",
		"@typescript-eslint/parser": "^5.36.0",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-astro": "^0.17.1",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-astro": "^0.5.3"
	},
	"pnpm": {
		"overrides": {
			"rollup": "^2.78.1",
			"vite": "^3.0.9"
		}
	}
}
