{
	"name": "vkbansal.me",
	"version": "3.0.0",
	"description": "Site for Vivek Kumar Bansal",
	"type": "module",
	"private": true,
	"author": "Vivek Kumar Bansal <contact@vkbansal.me>",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0+",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint 'src/**/*.{ts,tsx,astro}'",
		"fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
		"fmt:c": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'",
		"check": "astro check && tsc --noEmit",
		"spell": "cspell 'src/**/*.md'",
		"dev": "astro dev",
		"start": "astro dev",
		"prebuild": "rm -rf public",
		"build": "NODE_ENV=production astro build"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "^6.3.9",
		"@shikijs/transformers": "^3.15.0",
		"@shikijs/twoslash": "^3.15.0",
		"astro": "^5.16.0",
		"change-case": "^5.4.4",
		"dayjs": "^1.11.19",
		"html-entities": "^2.6.0",
		"normalize.css": "^8.0.1",
		"reading-time": "^1.5.0",
		"rehype-attr": "^4.1.1",
		"rehype-external-links": "^3.0.0",
		"sass": "^1.94.2",
		"sharp": "^0.34.5",
		"shiki": "^3.15.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@cspell/eslint-plugin": "^9.3.2",
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"cspell": "^9.3.2",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"typescript-eslint": "^8.47.0"
	}
}
