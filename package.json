{
	"name": "vkbansal.me",
	"version": "3.0.0",
	"description": "Site for Vivek Kumar Bansal",
	"type": "module",
	"private": true,
	"author": "Vivek Kumar Bansal <contact@vkbansal.me>",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint 'src/**/*.{ts,tsx,astro}'",
		"fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
		"fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'",
		"typecheck": "astro check && tsc --noEmit",
		"dev": "astro dev",
		"start": "astro dev",
		"prebuild": "rm -rf public",
		"build": "NODE_ENV=production astro build"
	},
	"dependencies": {
		"@types/node": "^18.11.18",
		"astro": "^1.9.2",
		"change-case": "^4.1.2",
		"date-fns": "^2.29.3",
		"html-entities": "^2.3.3",
		"normalize.css": "^8.0.1",
		"reading-time": "^1.5.0",
		"sass": "^1.57.1",
		"typescript": "^4.9.4"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-astro": "^0.21.1",
		"husky": "^8.0.3",
		"prettier": "^2.8.2",
		"prettier-plugin-astro": "^0.7.2",
		"rehype-attr": "^2.1.4",
		"rehype-external-links": "^2.0.1"
	}
}
